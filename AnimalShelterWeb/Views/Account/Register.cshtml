@model AnimalShelterWeb.Models.RegisterModel
 
<div class='text-center'>
<h2>Регистрация</h2>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <table class=center-table>
             <tr>
                <td class="text-left">
                    <div style="width:120px">
                        <label asp-for="Email">Фамилия</label><br />
                    </div>
                </td>
                <td width=80px>

                </td>
                <td>
                    <input style="width:120px" type="text" asp-for="LastName" />
                </td>
            </tr>
            <tr>
                <td colspan=3>
                    <span asp-validation-for="LastName" class='text-danger'/>
                </td>
            </tr>
             <tr>
                <td class="text-left">
                    <div style="width:120px">
                        <label asp-for="Email">Имя</label><br />
                    </div>
                </td>
                <td width=80px>

                </td>
                <td>
                    <input style="width:120px" type="text" asp-for="FirstName" />
                </td>
            </tr>
            <tr>
                <td colspan=3>
                    <span asp-validation-for="FirstName" class='text-danger'/>
                </td>
            </tr>
            <tr>
                <td class="text-left">
                    <div style="width:120px">
                        <label asp-for="Email">Логин</label><br />
                    </div>
                </td>
                <td width=80px>

                </td>
                <td>
                    <input style="width:120px" type="text" asp-for="Email" />
                </td>
            </tr>
            <tr>
                <td colspan=3>
                    <span asp-validation-for="Email" class='text-danger'/>
                </td>
            </tr>
            <tr>
                <td class="text-left">
                    <label asp-for="Password">Пароль</label><br />
                </td>
                <td></td>
                <td>
                    <input style="width:120px" asp-for="Password" />
                </td>
            </tr>
            <tr>
                <td colspan=3>
                    <span asp-validation-for="Password" class='text-danger'/>
                </td>
            </tr>
            <tr>
                <td class="text-left">
                    <label asp-for="ConfirmPassword">Повтор пароля</label><br />
                </td>
                <td></td>
                <td>
                    <input style="width:120px" asp-for="ConfirmPassword" />
                </td>
            </tr>
            <tr>
                <td colspan=3>
                    <span asp-validation-for="ConfirmPassword" class='text-danger'/>
                </td>
            </tr>
        </table>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Регистрация" />
            </div>
    </form>
 </div>

 @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}