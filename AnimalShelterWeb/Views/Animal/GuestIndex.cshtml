@model IEnumerable<Core.Animal>

@{
    ViewData["Title"] = "Animals";
}



<div class='card-container'>

    @foreach (var item in Model) {
        <div class='card card-body'>
            @if(item.Image != null)
                {
                    @Html.Raw("<img height='200' class='center' src=\"data:image/jpeg;base64,"
                    + Convert.ToBase64String(item.Image) + "\" />");
                }
                else
                {
                    <img height="200" class="center" src='~/images/defaultImage.jpg' />
                }
                <div class="text-center">
                    <h3>
                        @item.Name
                    </h3>
                    <button class='btn btn-primary'>Забрать</button>
                </div>
        </div>
    }
</div>