<Page x:Class="AnimalShelterWPF.Pages.AnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelterWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnimalPage">

    <Page.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="30,0"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="New Animal" FontSize="25"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="3" 
                Foreground="Gray" Background="Azure" Click="btnCancel_Click"/>
        <Button x:Name="btnSave" Content="Save"
                Click="btnSave_Click" Grid.Column="4"/>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="Name"/>
            <TextBox x:Name="tbName" Text="{Binding Name}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="ArrivalDate" />
            <DatePicker x:Name="tbDate" Text="{Binding ArrivalDate}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Type"/>
            <ComboBox x:Name="tbType" SelectedItem="{Binding Type}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="3">
            <TextBlock Text="Breed"/>
            <TextBox x:Name="tbBreed" Text="{Binding Breed}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <TextBlock Text="Height"/>
            <TextBox x:Name="tbHeight" Text="{Binding Height}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <TextBlock Text="Weight"/>
            <TextBox x:Name="tbWeight" Text="{Binding Weight}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <TextBlock Text="Color"/>
            <TextBox x:Name="tbColor" Text="{Binding Color}"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0">
            <TextBlock Text="Age"/>
            <TextBox x:Name="tbAge" Text="{Binding Age}"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <TextBlock Text="Gender"/>
            <ComboBox x:Name="tbGender" SelectedItem="{Binding Gender}"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="0">
            <TextBlock Text="CapturePlace"/>
            <ComboBox x:Name="tbCapturePlace" SelectedItem="{Binding CapturePlace}"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1">
            <TextBlock Text="Sign"/>
            <ComboBox x:Name="tbSign" SelectedItem="{Binding Sign}"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="2">
            <TextBlock Text="Character"/>
            <ComboBox x:Name="tbCharacter" SelectedItem="{Binding Character}"/>
        </StackPanel>
    </Grid>
</Page>
