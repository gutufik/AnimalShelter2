<Page x:Class="AnimalShelterWPF.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelterWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Аккаунт" Grid.Column="1" Grid.ColumnSpan="2"
                   FontSize="25" HorizontalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Логин" />
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Фамилия" />
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Имя" />
        <Button Grid.Row="4" Grid.Column="1" x:Name="btnSave" Content="Сохранить"/>
        <Button Grid.Row="4" Grid.Column="2" x:Name="btnExit" Content="Выйти"/>
    </Grid>
</Page>
