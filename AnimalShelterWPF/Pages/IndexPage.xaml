<Page x:Class="AnimalShelterWPF.Pages.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnimalShelterWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border
            CornerRadius="50"
            Background="#8cf5bb">
            <StackPanel>
            <TextBlock Padding="20" 
                       Text="Это приложение, позволяющее облегчить работу приютов и реабилитационных центров животных, сэкономить время на ведении документации, помочь с учетом лечения животных и учетом лекарств. " 
                       TextAlignment="Center"
               FontSize="30" TextWrapping="Wrap"/>
        </StackPanel>
        </Border>
        <Image Grid.Column="1" 
               Source="/Images/IndexImage.png" 
               Stretch="Fill"/>
    </Grid>
</Page>
